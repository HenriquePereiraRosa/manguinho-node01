{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"module": "commonjs", // disable need of .js/.ts on imports
		"target": "es2021",
		"esModuleInterop": true,
		"allowJs": true,
		// "forceConsistentCasingInFileNames": true, // imports have to match in CamelCase including
		// "sourceMap": true, // generate debug source map for breakpoint purpose,
		// "strictNullChecks": true,
		// "strictFunctionTypes": true, // avoid partial Interface implementations
		// "strictPropertyInitialization": true,
		// "noImplicitAny": true, // doesn't infer any implicitly
		"strict": true, // group all other sctrict rules in one rule
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@/tests/*": ["../tests/*"]
		}
	},
	"include": ["src"]
}